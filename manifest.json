{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.0",
  "description": "__MSG_extensionDescription__",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",  
    "scripting", 
    "contextMenus",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background/service-worker.js"],
    // "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "default_locale": "en",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    }
  },
  "commands": {
    "toggle-translation": {
      "suggested_key": {
        "default": "Alt+A"
      },
      "description": "__MSG_commandToggleTranslation__"
    },
    "translate-selection": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "__MSG_commandTranslateSelection__"
    },
    "toggle-display-mode": {
      "suggested_key": {
        "default": "Alt+X"
      },
      "description": "__MSG_commandToggleDisplayMode__"
    }
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content/style.css",
        "content/subtitle/subtitle-manager.js",
        "content/subtitle/youtube-subtitle-strategy.js",
        "content/subtitle/bilibili-subtitle-strategy.js",
        "content/subtitle/video-subtitle-observer.js"
      ],
      "matches": [ "<all_urls>" ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "foxlate@sanni"
    }
  }
}
