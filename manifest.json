{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.0",
  "description": "__MSG_extensionDescription__",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",      // 存储用户设置
    "activeTab",    // 访问当前活动标签页
    "scripting",    // 向页面注入脚本
    "contextMenus"  // (可选) 添加右键菜单翻译
  ],
  "host_permissions": [

  ],
  "background": {
    "scripts": ["background/service-worker.js"],
    "type": "module"
  },
  
  "default_locale": "en",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    }
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  // 确保 Firefox 兼容性
  "browser_specific_settings": {
    "gecko": {
      "id": "translator@example.com"
    }
  }
}
