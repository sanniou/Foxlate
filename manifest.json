{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.0",
  "description": "__MSG_extensionDescription__",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",      // 存储用户设置
    "activeTab",    // 访问当前活动标签页
    "scripting",    // 向页面注入脚本
    "contextMenus"  // (可选) 添加右键菜单翻译
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["common/constants.js", "common/settings-manager.js", "background/service-worker.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [
        "lib/webextension-polyfill.js",
        "common/constants.js",
        "content/strategies/hover-strategy.js",
        "content/strategies/append-strategy.js",
        "content/strategies/replace-strategy.js",
        "content/strategies/context-menu-strategy.js",
        "content/display-manager.js",
        "content/content-script.js"
      ],
      "css": ["content/style.css"],
      "run_at": "document_idle"
    }
  ],
  
  "default_locale": "en",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    }
  },
  "commands": {
    "toggle-translation": {
      "suggested_key": {
        "default": "Alt+A"
      },
      "description": "切换显示翻译/原文"
    },
    "translate-selection": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "翻译选中的文字"
    }
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": [ "common/common.css" ],
      "matches": [ "<all_urls>" ]
    }
  ],
  // 确保 Firefox 兼容性
  "browser_specific_settings": {
    "gecko": {
      "id": "translator@example.com"
    }
  }
}
